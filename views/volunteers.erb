<h1>Volunteer: <%= @volunteer.name %></h1>
<h3>Project: <%= @volunteer.project.title %></h3>

<form  action='/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>' method="post">
<input type="hidden"   name="_method" value="patch">
  <div class='form-group'>
    <label for="name">Rename volunteer</label>
    <input id="name" name="name" type="text" class='form-control'>
  </div>
  <button type="submit" name="button">Update Volunteer</button>
</form>

<form action='/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>' method="post">
  <input type="hidden" name="_method" value="delete">
 
  <button type="submit" name="button">Delete Volunteer</button>
</form>

<a href="/projects/<%= @volunteer.project.id %>">Back to <%= @volunteer.project.title %></a>